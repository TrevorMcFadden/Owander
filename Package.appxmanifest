    Publisher="CN=amand"
    Version="1.0.0.0" />

  <mp:PhoneIdentity PhoneProductId="e57275cc-34c4-4738-b3ab-e9586101c8b0" PhonePublisherId="00000000-0000-0000-0000-000000000000"/>

  <Properties>
    <DisplayName>Owander</DisplayName>
    <PublisherDisplayName>Anyone</PublisherDisplayName>
